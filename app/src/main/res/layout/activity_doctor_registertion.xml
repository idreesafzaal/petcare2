<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".doctor_registertion">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/linearlayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@color/colorPrimary"
                    android:orientation="vertical">
                    <ImageView
                        android:padding="10dp"
                        android:tint="@color/white"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/circle"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/signupicon"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:text="Signup"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/white"
                        android:fontFamily="sans-serif-medium"
                        />

                </LinearLayout>
                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/linearlayout1"
                    android:rotation="45"
                    android:layout_marginTop="-10dp"
                    android:src="@drawable/square"
                    android:layout_centerHorizontal="true"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="30dp"
                    android:id="@+id/relativelayout1"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_below="@+id/imageView1"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imageView_userIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:tint="@color/white"
                        android:src="@drawable/person"
                        android:padding="8dp"
                        android:background="@color/colorPrimary"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:id="@+id/docname"
                        android:layout_height="wrap_content"
                        android:hint="Full name"
                        android:inputType=""
                        android:textSize="15sp"
                        android:paddingLeft="20dp"
                        android:layout_toRightOf="@+id/imageView_userIcon"
                        android:background="@color/editTextBackground"
                        android:layout_alignBottom="@+id/imageView_userIcon"
                        android:layout_alignParentTop="true"
                        />

                </RelativeLayout>




                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"

                    android:id="@+id/relativelayout2"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_below="@+id/relativelayout1"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imageView_emailIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:tint="@color/white"
                        android:src="@drawable/email"
                        android:padding="8dp"
                        android:background="@color/colorPrimary"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email"
                        android:id="@+id/docemail"
                        android:textSize="15sp"
                        android:paddingLeft="20dp"
                        android:layout_toRightOf="@+id/imageView_emailIcon"
                        android:background="@color/editTextBackground"
                        android:layout_alignBottom="@+id/imageView_emailIcon"
                        android:layout_alignParentTop="true"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:id="@+id/relativelayout01"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_below="@+id/relativelayout2"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imageVieuserIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:tint="@color/white"
                        android:src="@drawable/person"
                        android:padding="8dp"
                        android:background="@color/colorPrimary"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:id="@+id/doctor_info"
                        android:layout_height="wrap_content"
                        android:hint="info"
                        android:textSize="15sp"
                        android:paddingLeft="20dp"
                        android:layout_toRightOf="@+id/imageVieuserIcon"
                        android:background="@color/editTextBackground"
                        android:layout_alignBottom="@+id/imageVieuserIcon"
                        android:layout_alignParentTop="true"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"

                    android:id="@+id/relativelayout3"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_below="@+id/relativelayout01"
                    android:layout_height="wrap_content">
                    <com.hbb20.CountryCodePicker
                        android:id="@+id/ccp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tint="@color/white"

                        app:ccp_defaultNameCode="Pk"
                        app:ccp_textSize="10sp"
                        android:padding="8dp"
                        android:background="@color/colorPrimary"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Phone"
                        android:id="@+id/docnumber"
                        android:maxLength="10"
                        android:inputType="number"
                        android:textSize="15sp"
                        android:paddingLeft="20dp"
                        android:layout_toRightOf="@+id/ccp"
                        android:background="@color/editTextBackground"
                        android:layout_alignBottom="@+id/ccp"
                        android:layout_alignParentTop="true"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"

                    android:id="@+id/relativelayout45"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_below="@+id/relativelayout3"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imageViewIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:tint="@color/white"
                        android:src="@drawable/countryicon"
                        android:padding="8dp"
                        android:background="@color/colorPrimary"/>
                    <com.scrounger.countrycurrencypicker.library.Buttons.CountryCurrencyButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/country"
                        android:inputType="text"
                        app:country_code="Pk"
                        android:textSize="10sp"
                        android:paddingLeft="20dp"
                        android:layout_toRightOf="@+id/imageViewIcon"
                        android:background="@color/editTextBackground"
                        android:layout_alignBottom="@+id/imageViewIcon"
                        android:layout_alignParentTop="true"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"

                    android:id="@+id/relativelayout40"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_below="@+id/relativelayout45"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:tint="@color/white"
                        android:src="@drawable/addressicon"
                        android:padding="8dp"
                        android:background="@color/colorPrimary"/>
                    <android.support.v7.widget.AppCompatAutoCompleteTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/address"
                        android:inputType="text"
                        android:hint="Clinic address"
                        android:textSize="15sp"
                        android:paddingLeft="20dp"
                        android:layout_toRightOf="@+id/iIcon"
                        android:background="@color/editTextBackground"
                        android:layout_alignBottom="@+id/iIcon"
                        android:layout_alignParentTop="true"
                        />

                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"

                    android:id="@+id/relativelayout4"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_below="@+id/relativelayout40"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imageView_passIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:tint="@color/white"
                        android:src="@drawable/medicallicenseicon"
                        android:padding="8dp"
                        android:background="@color/colorPrimary"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/medical_linces"
                        android:inputType="text"
                        android:hint="medical license"
                        android:textSize="15sp"
                        android:paddingLeft="20dp"
                        android:layout_toRightOf="@+id/imageView_passIcon"
                        android:background="@color/editTextBackground"
                        android:layout_alignBottom="@+id/imageView_passIcon"
                        android:layout_alignParentTop="true"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"

                    android:id="@+id/relativelayout5"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_below="@+id/relativelayout4"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imageViewpassIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:tint="@color/white"
                        android:src="@drawable/ic_security_black_24dp"
                        android:padding="8dp"
                        android:background="@color/colorPrimary"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/docpassword"
                        android:inputType="textPassword"
                        android:hint="Password"
                        android:textSize="15sp"
                        android:paddingLeft="20dp"
                        android:layout_toRightOf="@+id/imageViewpassIcon"
                        android:background="@color/editTextBackground"
                        android:layout_alignBottom="@+id/imageViewpassIcon"
                        android:layout_alignParentTop="true"
                        />

                </RelativeLayout>


                <Button
                    android:layout_below="@+id/relativelayout5"
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:text="Sign Up"
                    android:id="@+id/doc_regBtn"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:fontFamily="sans-serif-medium"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>

</RelativeLayout>