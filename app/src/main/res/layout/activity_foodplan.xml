<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/backgroundapp"
    android:layout_height="wrap_content"
    tools:context="petcare.idreesafzaal.petcare.foodplan">
    <include layout="@layout/toolbar" android:id="@+id/meassge_app_bar"></include>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_below="@+id/meassge_app_bar"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/linearlayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/circle"
                        android:padding="10dp"
                        android:src="@drawable/ic_pets_black_24dp"
                        android:tint="@color/white"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Your Pet Food Plan"
                        android:textColor="@color/white"
                        android:textSize="22sp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/linearlayout1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-10dp"
                    android:rotation="45"
                    android:src="@drawable/square" />


                <RelativeLayout
                    android:id="@+id/relativelayout0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView1"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="30dp">

                    <Spinner
                        android:id="@+id/food"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"></Spinner>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativelayout01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativelayout0"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="30dp">

                    <Button

                        android:id="@+id/dietselectedbtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="30dp"
                        android:background="@color/colorPrimary"
                        android:fontFamily="sans-serif-medium"
                        android:text="Select avaible diet"
                        android:textColor="@color/white" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/relativelayout001"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativelayout01"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="5dp">

                    <Button
                        android:id="@+id/breakfastcal"
                        android:layout_width="wrap_content"


                        android:layout_height="wrap_content"
                        android:background="@color/tranparent"

                        android:paddingLeft="20dp"
                        android:textSize="15sp"

                        />
                    <Button
                        android:id="@+id/lunchcal"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_toRightOf="@+id/breakfastcal"
                        android:background="@color/tranparent"


                        android:layout_height="wrap_content"


                        android:paddingLeft="20dp"
                        android:textSize="15sp"

                        />
                    <Button
                        android:id="@+id/dinnercal"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_toRightOf="@+id/lunchcal"



                        android:layout_height="wrap_content"
                        android:background="@color/tranparent"

                        android:paddingLeft="20dp"
                        android:textSize="15sp"

                        />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/relativelayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativelayout001"

                    android:layout_marginTop="30dp">

                    <Button
                        android:id="@+id/breakfastTimebtn"
                        android:layout_width="127dp"
                        android:layout_height="40dp"
                        android:background="@color/colorPrimary"
                        android:src="@drawable/person"
                        android:text="breakfast Time"
                        android:textColor="@color/white"
                        android:tint="@color/white" />

                    <TextView
                        android:id="@+id/breakfast"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/breakfastTimebtn"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/breakfastTimebtn"
                        android:background="@color/editTextBackground"
                        android:hint="Select Breakfast?"
                        android:paddingLeft="20dp"
                        android:textSize="15sp" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/relativelayout2"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativelayout1"

                    android:layout_marginTop="15dp">

                    <Button
                        android:id="@+id/lunchTimebtn"
                        android:layout_width="127dp"
                        android:layout_height="40dp"
                        android:background="@color/colorPrimary"

                        android:text=" Lunch Time"
                        android:textColor="@color/white"
                        android:tint="@color/white" />

                    <TextView
                        android:id="@+id/lunch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/lunchTimebtn"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/lunchTimebtn"
                        android:background="@color/editTextBackground"
                        android:hint="Select Lunch?"
                        android:paddingLeft="20dp"
                        android:textSize="15sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativelayout3"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativelayout2"

                    android:layout_marginTop="15dp">

                    <Button
                        android:id="@+id/dinnerTimebtn"
                        android:layout_width="127dp"
                        android:layout_height="40dp"
                        android:background="@color/colorPrimary"

                        android:text="Dinner Time"
                        android:textColor="@color/white"
                        android:tint="@color/white" />

                    <TextView
                        android:id="@+id/dinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/dinnerTimebtn"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/dinnerTimebtn"
                        android:background="@color/editTextBackground"
                        android:hint="Select Dinner?"
                        android:inputType="text"
                        android:paddingLeft="20dp"
                        android:textSize="15sp" />

                </RelativeLayout>


                <Button
                    android:id="@+id/foodplanBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativelayout3"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="30dp"
                    android:background="@color/colorPrimary"
                    android:fontFamily="sans-serif-medium"
                    android:text="Make diet plan"
                    android:textColor="@color/white" />


            </RelativeLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>
</RelativeLayout>
