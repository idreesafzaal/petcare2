
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_centerInParent="true"

        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/linearlayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@color/colorPrimary"
                    android:orientation="vertical">
                    <ImageView
                        android:padding="10dp"
                        android:tint="@color/white"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/circle"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_pets_black_24dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:text="Update pet food plan"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/white"
                        android:fontFamily="sans-serif-medium"
                        />

                </LinearLayout>
                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/linearlayout1"
                    android:rotation="45"
                    android:layout_marginTop="-10dp"
                    android:src="@drawable/square"
                    android:layout_centerHorizontal="true"/>
                <RelativeLayout
                    android:id="@+id/relativelayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView1"

                    android:layout_marginTop="30dp">

                    <Button
                        android:id="@+id/dybreakfastTimebtn"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:background="@color/colorPrimary"
                        android:padding="8dp"
                        android:src="@drawable/person"
                        android:text="Time"
                        android:textColor="@color/white"
                        android:tint="@color/white" />

                    <EditText
                        android:id="@+id/dyupdatebreakfast"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                      android:scrollHorizontally="true"
                        android:layout_alignBottom="@+id/breakfastTimebtn"
                        android:textAlignment="center"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/breakfastTimebtn"
                        android:background="@color/editTextBackground"
                        android:hint="Select Breakfast?"
                        android:paddingLeft="20dp"
                        android:textSize="15sp" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/relativelayout2"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativelayout1"

                    android:layout_marginTop="15dp">

                    <Button
                        android:id="@+id/dylunchTimebtn"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:background="@color/colorPrimary"
                        android:padding="8dp"
                        android:text="Time"
                        android:textColor="@color/white"
                        android:tint="@color/white" />

                    <EditText
                        android:id="@+id/dyupdatelunch"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textAlignment="center"
                        android:layout_alignBottom="@+id/lunchTimebtn"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/lunchTimebtn"
                        android:background="@color/editTextBackground"
                        android:hint="Select Lunch?"
                        android:paddingLeft="20dp"
                        android:textSize="15sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativelayout3"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativelayout2"

                    android:layout_marginTop="15dp">

                    <Button
                        android:id="@+id/dydinnerTimebtn"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:background="@color/colorPrimary"
                        android:padding="8dp"
                        android:text="Time"
                        android:textColor="@color/white"
                        android:tint="@color/white" />

                    <EditText
                        android:id="@+id/dyupdatedinner"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textAlignment="center"
                        android:layout_alignBottom="@+id/dinnerTimebtn"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/dinnerTimebtn"
                        android:background="@color/editTextBackground"
                        android:hint="Select Dinner?"
                        android:inputType="text"
                        android:paddingLeft="20dp"
                        android:textSize="15sp" />

                </RelativeLayout>




                <RelativeLayout
                    android:id="@+id/relativelayout4"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativelayout3"

                    android:layout_marginTop="15dp">

                    <ImageView
                        android:id="@+id/dytn"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:background="@color/colorPrimary"
                        android:src="@drawable/calories"
                        android:padding="8dp"
                        android:text="Time"
                        android:textColor="@color/white"
                        android:tint="@color/white" />

                    <EditText
                        android:id="@+id/dyupdateTotalCalories"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textAlignment="center"
                        android:layout_alignBottom="@+id/dytn"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/dytn"
                        android:background="@color/editTextBackground"
                        android:hint="Calories"
                        android:inputType="text"
                        android:paddingLeft="20dp"
                        android:textSize="15sp" />

                </RelativeLayout>




                <Button
                    android:id="@+id/dyupdateFoodBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativelayout4"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="30dp"
                    android:background="@color/colorPrimary"
                    android:fontFamily="sans-serif-medium"
                    android:text="Update now"
                    android:textColor="@color/white" />


            </RelativeLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>

</RelativeLayout>