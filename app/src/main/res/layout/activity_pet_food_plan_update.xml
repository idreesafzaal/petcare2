<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    tools:context=".petFoodPlanUpdate">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/dynamicFoodPlan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"></android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/movetoffodplan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@color/tranparent"
        android:text="Nothing to show make food plan first"
        android:textAlignment="center"
        android:textColor="@color/textcolor" />
</RelativeLayout>